###############################################################################
#                                ↓ REQUIRED ↓                                 #
###############################################################################

# Network to run the node on ("mainnet" or "goerli")
NETWORK_NAME={{ 'mainnet' if is_mainnet | bool else 'goerli' }}

# Type of node to run ("full" or "archive"), note that "archive" is 10x bigger
NODE_TYPE=full

###############################################################################
#                            ↓ REQUIRED (LEGACY) ↓                            #
###############################################################################

# Where to sync data from ("l1" or "l2"), see README
SYNC_SOURCE=l1

# Reference L2 node to run healthcheck against
HEALTHCHECK__REFERENCE_RPC_PROVIDER={{ optimism_reference_l2_node }}

# L1 node to run fault detection against
FAULT_DETECTOR__L1_RPC_PROVIDER={{ ethereum_host_dns }}:{{ http_port }}

# Node to get chain data from (if SYNC_SOURCE is "l1" then use L1 node, etc.)
DATA_TRANSPORT_LAYER__RPC_ENDPOINT={{ ethereum_host_dns }}:{{ http_port }}

###############################################################################
#                            ↓ REQUIRED (BEDROCK) ↓                           #
###############################################################################

# Where to get the Bedrock database ("download" or "migration"), see README
BEDROCK_SOURCE=download

# L1 node that the op-node (Bedrock) will get chain data from
OP_NODE__RPC_ENDPOINT={{ ethereum_host_dns }}:{{ http_port }}

# Type of RPC that op-node is connected to, see README
OP_NODE__RPC_TYPE=basic

###############################################################################
#                                ↓ OPTIONAL ↓                                 #
###############################################################################

# Feel free to customize your image tag if you want, uses "latest" by default
# See here for all avalabe images: https://hub.docker.com/u/ethereumoptimism
IMAGE_TAG__L2GETH=
IMAGE_TAG__DTL=
IMAGE_TAG__HEALTCHECK=
IMAGE_TAG__FAULT_DETECTOR=
IMAGE_TAG__PROMETHEUS=
IMAGE_TAG__GRAFANA=
IMAGE_TAG__INFLUXDB=

# Exposed server ports (must be unique)
# See docker-compose.yml for default values
PORT__L2GETH_HTTP={{ http_port }}
PORT__L2GETH_WS={{ ws_port }}
PORT__DTL={{ optimism_dtl_port }}
PORT__HEALTHCHECK_METRICS={{ optimism_healthcheck_metrics_port }}
PORT__HEALTHCHECK_BEDROCK_METRICS={{ optimism_healthcheck_bedrock_metrics_port }}
PORT__FAULT_DETECTOR_METRICS={{ optimism_fault_detector_metrics_port }}
PORT__FAULT_DETECTOR_BEDROCK_METRICS={{ optimism_fault_detector_bedrock_metrics_port }}
PORT__PROMETHEUS={{ optimism_prometheus_port }}
PORT__GRAFANA={{ optimism_grafana_port }}
PORT__INFLUXDB={{ optimism_influxdb_port }}
PORT__TORRENT_UI={{ optimism_torrent_ui_port }}
PORT__TORRENT={{ optimism_torrent_port }}
PORT__OP_GETH_HTTP={{ optimism_op_geth_http_port }}
PORT__OP_GETH_WS={{ optimism_op_geth_ws_port }}

# Misc.
TORRENT_UI_PASSWORD={{ optimism_torrent_ui_password }}
